<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="132dp"
        android:src="@drawable/logo1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:paddingTop="22dp"
        android:paddingBottom="2dp"
        android:src="@drawable/logo2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="194dp"
        android:background="@drawable/inicioypass"
        android:drawableStart="@drawable/vectorperf"
        android:hint="  Ingrese Usuario"
        android:paddingBottom="20dp" />

    <Button
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:background="@drawable/borde_redondo"
        android:onClick="irPantallaInicio"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/loginFbButton"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/dosbordes_redondofb"
        android:text="Login con Facebook"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/loginGoogleButton"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/dosbordes_redondogo"
        android:text="Login con Google"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/loginTwitterButton"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="134dp"
        android:background="@drawable/dosbordes_redondotw"
        android:text="Login con Twitter"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:onClick="sendMessage"
        android:text="¿Aún no estas registrado? Registrate ahora"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="255dp"
        android:drawableStart="@drawable/vectorpass"
        android:ems="10"
        android:background="@drawable/inicioypass"
        android:hint="  Ingrese Contraseña"
        android:inputType="textPassword"
        android:onClick="irRegistroPersonalizado"
        android:paddingBottom="20dp" />


</RelativeLayout>