<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <View
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="446dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="113dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:background="#000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="446dp" />

    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:text="Bienvenido!"
        android:textColor="#0C0F1B"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="471dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="204dp"
            android:layout_height="30dp"
            android:layout_marginBottom="19dp"
            android:text="  Nivel:"
            android:textColor="#0E0E0E"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spnNivel"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:entries="@array/Nivel"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblMateria"
            android:layout_width="204dp"
            android:layout_height="30dp"
            android:layout_marginBottom="18dp"
            android:text="  Materia:"
            android:textColor="#0E0E0E"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spMateria"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:entries="@array/Materia"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblArchivo"
            android:layout_width="236dp"
            android:layout_height="30dp"
            android:layout_marginBottom="25dp"
            android:text="  Archivo:"
            android:textColor="#0E0E0E"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:background="#41DAA4"
            android:drawableStart="@drawable/vectorbuscar"
            android:paddingStart="15dp"
            android:text="Buscar"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="269dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblEntregar"
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_marginBottom="46dp"
            android:text="  Entregar:"
            android:textColor="#0E0E0E"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lo mas pronto posible" />

                <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="154dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="74dp"
        android:background="#2FAC27"
        android:text="ENVIAR"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_above="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="  Ingrese su comentario"
        android:gravity="start|top"
        android:inputType="textMultiLine" />


</RelativeLayout>